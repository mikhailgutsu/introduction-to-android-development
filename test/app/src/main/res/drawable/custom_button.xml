<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722"/> <!-- Цвет при нажатии -->
            <corners android:radius="25dp"/> <!-- Закругление углов -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Цвет в обычном состоянии -->
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- Граница -->
        </shape>
    </item>
</selector>